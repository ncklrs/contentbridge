{
  "name": "@contentbridge/contentful",
  "version": "0.1.0",
  "description": "Contentful CMS adapter for ContentBridge - provides Content Delivery/Management API integration and Rich Text conversion",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./query": {
      "types": "./dist/query/index.d.ts",
      "import": "./dist/query/index.js"
    },
    "./richtext": {
      "types": "./dist/richtext/index.d.ts",
      "import": "./dist/richtext/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@contentbridge/core": "workspace:*"
  },
  "peerDependencies": {
    "contentful": "^11.0.0",
    "contentful-management": "^11.0.0"
  },
  "devDependencies": {
    "contentful": "^11.0.0",
    "contentful-management": "^11.0.0",
    "@contentful/rich-text-types": "^16.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "contentful",
    "cms",
    "rich-text",
    "contentbridge",
    "headless-cms",
    "content-delivery-api",
    "content-management-api"
  ]
}
