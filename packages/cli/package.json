{
  "name": "@contentbridge/cli",
  "version": "0.1.0",
  "description": "CLI tool for ContentBridge - generate types, initialize projects, and more",
  "license": "MIT",
  "type": "module",
  "bin": {
    "contentbridge": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "zod": "^3.22.0",
    "cosmiconfig": "^9.0.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@contentbridge/core": "workspace:*",
    "tsup": "^8.0.0",
    "vitest": "^1.6.0",
    "@types/node": "^20.10.0"
  },
  "peerDependencies": {
    "@contentbridge/core": "workspace:*"
  },
  "keywords": [
    "contentbridge",
    "cli",
    "codegen",
    "types",
    "cms",
    "headless"
  ]
}
